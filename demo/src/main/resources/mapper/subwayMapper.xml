<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.DAO.subwayDAO">

<!-- 노선 정보 가져오기 -->
<select id="selectLine" resultType="com.example.demo.VO.lineVO">
	select * from line
</select>

<!-- 하차역 정보 가져오기 -->
<select id="selectStation" parameterType="_int" resultType="com.example.demo.VO.stationVO">
	select * from station where lineNum=#{lineNum}
</select>

<!-- 하차정보 등록하기 -->
<insert id="insertGetoffInfo" parameterType="com.example.demo.VO.getoff_infoVO">
	insert into getoff_info(subwayId,trainNo,carNum,seatNum,statnNm,getoffNm,getoffstatn,userId) 
	values (#{subwayId},#{trainNo}, #{carNum}, #{seatNum}, #{statnNm}, #{getoffNm}, #{getoffstatn}, #{userId})
	<selectKey keyProperty="id" resultType="int">
        SELECT LAST_INSERT_ID()
    </selectKey>
</insert>

<!-- 등록된 하차정보 가져오기 (내정보)-->
<select id="selectMySeatInfo" parameterType="map" resultType="com.example.demo.VO.getoff_infoVO">
	select * 
	from getoff_info g join line l
	on l.id = g.subwayId
	where userId=#{userId} 
	<choose>
		<when test="type == 1">
			and g.id=#{id} 
		</when>
		<when test="type == 2">
			and flag = 1
		</when>
	</choose>
</select>

<!-- 좌석 중복 체크  -->
<select id="checkDuplicatedInfo" parameterType="_int" resultType="_int">
	select count(*) from getoff_info where userId=#{userId}
</select>

<!-- 하차정보 전체 조회 (열차별) -->
<select id="selectGetoffInfo" parameterType="map" resultType="com.example.demo.VO.getoff_infoVO">
	select * 
	from getoff_info g join line l
	on l.id = g.subwayId
	where carNum=#{carNum} and trainNo=#{trainNo} and subwayId=#{subwayId}
</select>



</mapper>
